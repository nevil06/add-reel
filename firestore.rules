rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ===== Helper Functions =====
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function isValidPointsUpdate() {
      // Prevent users from manually increasing their points
      return request.resource.data.points >= resource.data.points ||
             // Allow admin to modify
             isAdmin();
    }
    
    // ===== Users Collection =====
    match /users/{userId} {
      // Users can read their own data
      allow read: if isOwner(userId) || isAdmin();
      
      // Users can create their own account with 0 points
      allow create: if isAuthenticated() && 
                    isOwner(userId) &&
                    request.resource.data.points == 0 &&
                    request.resource.data.totalEarned == 0 &&
                    request.resource.data.uid == userId;
      
      // Users can update their own data (with restrictions)
      allow update: if isOwner(userId) &&
                    request.resource.data.uid == userId &&
                    isValidPointsUpdate();
    }
    
    // ===== Ads Collection =====
    match /ads/{adId} {
      // Anyone can read active ads
      allow read: if true;
      
      // Only admins can create/update/delete ads
      allow write: if isAdmin();
    }
    
    // ===== Companies Collection =====
    match /companies/{companyId} {
      // Only admins can read company data
      allow read: if isAdmin();
      
      // Only admins can create/update/delete companies
      allow write: if isAdmin();
    }
    
    // ===== Transactions Collection =====
    match /transactions/{transactionId} {
      // Users can read their own transactions
      allow read: if isAuthenticated() && 
                  resource.data.userId == request.auth.uid;
      
      // Only backend can write transactions
      allow write: if false;
    }
    
    // ===== Ad Views Collection =====
    match /adViews/{viewId} {
      // Users can read their own ad views
      allow read: if isAuthenticated() && 
                  resource.data.userId == request.auth.uid;
      
      // Only backend can write ad views
      allow write: if false;
    }
    
    // ===== Withdrawals Collection =====
    match /withdrawals/{withdrawalId} {
      // Users can read their own withdrawals
      allow read: if isAuthenticated() && 
                  resource.data.userId == request.auth.uid;
      
      // Users can create withdrawal requests
      allow create: if isAuthenticated() &&
                    request.resource.data.userId == request.auth.uid &&
                    request.resource.data.status == 'pending';
      
      // Only admins can update withdrawals
      allow update: if isAdmin();
      
      // No one can delete withdrawals
      allow delete: if false;
    }
    
    // ===== Referrals Collection =====
    match /referrals/{referralId} {
      // Users can read their own referrals
      allow read: if isAuthenticated() && 
                  (resource.data.referrerId == request.auth.uid ||
                   resource.data.referredId == request.auth.uid);
      
      // Only backend can write referrals
      allow write: if false;
    }
    
    // ===== Analytics Collection (Admin Only) =====
    match /analytics/{doc} {
      allow read, write: if isAdmin();
    }
    
    // ===== Deny all other collections by default =====
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
